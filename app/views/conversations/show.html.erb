<div class="chatboxhead">
  <div class="chatboxtitle">
    <i class="fa fa-comments"></i>

    <h1><%= @reciever.name %> </h1>
  </div>
  <div class="chatboxoptions">
    <%= link_to "<i class='fa  fa-minus-circle'></i> ".html_safe, "#", class: "toggleChatBox", "data-cid" => @conversation.id %>
    <%= link_to "<i class='fa  fa-times-circle'></i> ".html_safe, "#", class: "closeChat", "data-cid" => @conversation.id %>
  </div>
</div>
<div class="chatboxcontent">
  <% if @messages.any? %>
      <%= render @messages %>
  <% end %>
</div>
<div class="chatboxinput">
  <%= form_for([@conversation, @message], :remote => true, :html => { id: "conversation_form_#{@conversation.id}"}) do |f| %>
      <%= f.text_area :body, class: "chatboxtextarea", "data-cid" => @conversation.id %>
  <span class="emoticon-trig"></span>
  <% end %>
</div>
<div class="emoticon-div">
    <script type="application/javascript">
        $(".emoticon-div").html($.emoticons.toString());
    </script>
  </div>

<%= subscribe_to conversation_path(@conversation) %>
